{
  "name": "floricultura-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação Floricultura refatorada com Node.js",
  "main": "server.js",
  "scripts": {
    "start": "npm run lint:fix && npm run format && node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config ../tests/jest.config.backend.js",
    "test:unit": "jest \"../tests/backend/unit/**/*.test.js\"",
    "test:integration": "jest \"../tests/backend/integration/**/*.test.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json}\" \"*.js\"",
    "format:js": "prettier --write \"**/*.js\" \"*.js\"",
    "format:json": "prettier --write \"**/*.json\"",
    "format:controllers": "prettier --write \"controllers/**/*.js\"",
    "format:models": "prettier --write \"models/**/*.js\"",
    "format:routes": "prettier --write \"routes/**/*.js\"",
    "format:config": "prettier --write \"*.js\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "mongoose": "^8.15.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^7.1.1"
  }
}
